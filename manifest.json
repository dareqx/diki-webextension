{

  "manifest_version": 2,
  "name": "Diki.pl translation 2",
  "version": "1.1",
  "default_locale": "pl",

  "applications": {
    "gecko": {
      "id": "diki-webextension2@hyden.pl",
      "strict_min_version": "45.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  
  "icons": {
    "16": "icons/diki16.png",
    "32": "icons/diki32.png",
    "48": "icons/diki48.png"
  },
  
  "commands": {
    "open-url": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Open URL with selected text"
    }
  }

}
